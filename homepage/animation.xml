	<script>
		$(document).ready(function(){
			$('#header2').html(quoteGen[0]); /*fetch quote*/
			$('#header3').html(quoteGen[1]); /*fetch quoter*/
			$('#fullpage').fullpage({ 
				menu: false,
				lockAnchors: false,
				anchors:['firstPage', 'secondPage', 'thirdPage'],
				navigation: true,
				navigationPosition: 'right',
				navigationTooltips: ['<b>HOMEPAGE</b>', '<b>YEARPLAN</b>', '<b>MEMBERLIST</b>'],
				showActiveTooltip: false,
				slidesNavigation: true,
				controlArrows: false,
				verticalCentered: false,

				afterLoad: function(anchorLink, index)
				{
					var loadedSection = $(this);
					if(index == 1)
					{
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').removeClass('fadeOut');
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').addClass('fadeInUp');
					}

					if(index == 3)
					{
						$('#thirdheader, #memberlist, #memberlistp2').removeClass('fadeOut');
						$('#thirdheader, #memberlist, #memberlistp2').addClass('fadeInUp');
					}
				},
				onLeave: function(index, nextIndex, direction)
				{
					var leavingSection = $(this);
					if(index == 1 && direction=='down')
					{
						//page 1
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').removeClass('fadeInUp');
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').addClass('fadeOut');

						//page 2
						$('#secondheader, #yearplan').removeClass('fadeOut');
						$('#secondheader, #yearplan').addClass('fadeInUp');
					}

					if(index == 2 && direction=='up')
					{
						//page 1
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').removeClass('fadeOut');
						$('#header, #header2, #header3, #anchorbtn, #tourbtn').addClass('fadeInUp');

						//page 2
						$('#secondheader, #yearplan').removeClass('fadeInUp');
						$('#secondheader, #yearplan').addClass('fadeOut');
					}

					if(index == 2 && direction=='down')
					{
						//page 2
						$('#secondheader, #yearplan').removeClass('fadeInUp');
						$('#secondheader, #yearplan').addClass('fadeOut');

						//page 3
						$('#thirdheader, #memberlist, #memberlistp2').removeClass('fadeOut');
						$('#thirdheader, #memberlist, #memberlistp2').addClass('fadeInUp');
					}

					if(index==3 && direction=='up')
					{
						//page 2
						$('#secondheader, #yearplan').removeClass('fadeOut');
						$('#secondheader, #yearplan').addClass('fadeInUp');

						//page 3
						$('#thirdheader, #memberlist, #memberlistp2').removeClass('fadeInUp');
						$('#thirdheader, #memberlist, #memberlistp2').addClass('fadeOut')
					}
				}
			});
		});
	</script>
